#{{ ansible_managed }}
server {
        listen 80; 
        server_name "{{ hostvars[inventory_hostname].ansible_hostname }}.site";
        location / {
			root "{{ default_home1 }}";
			index  index.html
            try_files $uri $uri/ =404;
        }
}

