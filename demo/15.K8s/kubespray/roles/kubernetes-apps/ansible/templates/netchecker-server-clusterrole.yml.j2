kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: netchecker-server
  namespace: {{ netcheck_namespace }}
rules:
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["list"]
  - apiGroups: ["apiextensions.k8s.io"]
    resources: ["customresourcedefinitions"]
    verbs: ['*']
  - apiGroups: ["network-checker.ext"]
    resources: ["agents"]
    verbs: ['*']
