{% if virtual_hosts is defined %}
{% for var in virtual_hosts %}
    server {
        listen       {{ var.ip }}:80;
        server_name  {{ var.name }};

        #charset koi8-r;

        #access_log  logs/host.access.log  main;

        location / {
            root   {{ nginx_html }};
            index  index.html index.htm;
        }

